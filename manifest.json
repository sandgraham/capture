{
    "manifest_version": 2,

    "name": "capture",
    "description": "Take a screenshot of entire page and download immediately.",
    "version": "0.1",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "<all_urls>",
        "activeTab",
        "tabs",
        "downloads"
    ]
}
